<?xml version="1.0" encoding="UTF-8"?>
<config>
    <node>
        <id>1</id>
    </node>

    <redis>
        <host>127.0.0.1</host>
        <port>6380</port>
        <db>0</db>
    </redis>

    <cache>
        <seconds>3600</seconds>
    </cache>

    <battle>
        <log>false</log>
    </battle>


    <!-- below are common settings for all nodes -->
    <!-- which means all nodes must keep the same settings -->

    <crypto>
        <key>1234567890abcdef</key>
        <prefix>ok</prefix>
    </crypto>

    <mongodb>
        <host>127.0.0.1</host>
        <port>27017</port>
        <db>sanguo</db>
    </mongodb>

    <hub>
        <host>127.0.0.1</host>
        <port>
            <https>8020</https>
        </port>
    </hub>

    <log>
        <host>127.0.0.1</host>
        <port>10099</port>
    </log>

    <timer>
        <register>https://127.0.0.1:9995/register/</register>
        <unregister>https://127.0.0.1:9995/unregister/</unregister>
        <callback>https://127.0.0.1:9996/api/callback/timer/</callback>
    </timer>
</config>

