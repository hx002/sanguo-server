<?xml version="1.0" encoding="UTF-8"?>
<config>
    <!--本server的ID和监听的端口-->
    <!--server用uwsgi跑起来的，这里的http, https端口是nginx中的配置-->
    <!--配置在这里的作用也就是在server启动的时候去hub注册一下此server-->
    <server>
        <id>1</id>
        <name>第一服</name>
        <port>
            <http>0000</http>
            <https>0000</https>
        </port>
    </server>

    <redis>
        <host>127.0.0.1</host>
        <port>6380</port>
        <db>0</db>
    </redis>

    <!--在redis中cache数据的时间-->
    <cache>
        <seconds>3600</seconds>
    </cache>

    <!--是否输出战斗log-->
    <battle>
        <log>false</log>
    </battle>


    <!--下面这些配置对于每个server都要保持一致-->

    <!--加密session的key-->
    <crypto>
        <key>1234567890abcdef</key>
    </crypto>

    <mongodb>
        <host>127.0.0.1</host>
        <port>27017</port>
        <db>sanguo</db>
    </mongodb>

    <!--中心节点-->
    <hub>
        <host>127.0.0.1</host>
        <port>
            <https>8020</https>
        </port>
    </hub>

    <!--logman的地址-->
    <log>
        <host>127.0.0.1</host>
        <port>10099</port>
    </log>

    <timer>
        <register>https://127.0.0.1:9995/register/</register>
        <unregister>https://127.0.0.1:9995/unregister/</unregister>
    </timer>
</config>

